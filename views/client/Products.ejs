<% extend('../layout/layout') %> 

<div class="about-banner">
    <div class="about-banner-content">
        <p class="about-banner-first">為自己打造</p>
        <p class="about-banner-second">生活的品質</p>
    </div>
</div>

<div class="mt-5">
    <p class="text-center title-size font-weight-bolder"><%= category %> </p>
</div>

<div class="container modify-fix mb-5 mt-3">
    <div class="row">
        <div class="col-md-3 col-12 mt-5">
          <div>
            <% for( let i in categoriesArr ) { %>
                <a class="list-group-item list-group-item-action list-group-item-dark font-weight-bolder
                            <% if (category === categoriesArr[i].name) { %>
                             active
                            <% } %>"    
                    href="/products?category=<%= categoriesArr[i].name %>">
                    <%= categoriesArr[i].name %>
                </a>
            <% } %>
          </div>
        </div>

        <div class="col-md-9 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <p class="content-size font-weight-bolder font-space">
                            <span><%= productsArr.length %></span>個商品
                        </p>
                    </div>
                    <!-- <div class="col-6 d-flex justify-content-end">
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle bg-light text-dark" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              商品排序
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                              <a class="dropdown-item priceSort" href="#" data-sort="toHeigh">價格由低到高</a>
                              <a class="dropdown-item priceSort" href="#" data-sort="toLow">價格由高到低</a>
                            </div>
                        </div>
                    </div> -->
                </div>
            </div>

            <div class="row d-flex">
                <% for( let i in productsArr ) { %>
                    <div class="col-lg-4 col-md-6 col-12 mb-3 shadow p-2 mb-2 rounded products-card">
                        <div>
                            <img src="images/<%= productsArr[i].img %>" class="card-img-top" alt="<%= productsArr[i].name %>" style="height: 200px;">
                            <div class="info-box">
                                <a href="/detail/<%= productsArr[i].uid %>" class="look-more">查看更多</a>
                            </div> 
                        </div>
                           
                        <div class="card-body">
                            <h5 class="card-title text-center font-weight-bolder products-font-size"><%= productsArr[i].product %></h5>
                            <p class="card-text text-dark text-center">
                                <% if (productsArr[i].price === productsArr[i].origin) { %>
                                    <span class="card-text text-secondary content-size">NT <%= productsArr[i].price %></span>
                                <% } else { %>
                                    <del class="mr-2">NT <%= productsArr[i].origin %></del>
                                    <span class="card-text text-danger content-size">NT <%= productsArr[i].price %></span>
                                <% } %>
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="#" class="btn btn-danger addCart" data-uid="<%= productsArr[i].uid %>">加到購物車 <i class="fas fa-cart-arrow-down"></i></a>
                                <a href="#" class="btn btn-danger favBtn" data-uid="<%= productsArr[i].uid %>">珍藏 <i class="fas fa-heart"></i></a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
